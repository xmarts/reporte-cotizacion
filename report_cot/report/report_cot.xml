<?xml version="1.0"?>
<odoo>
<data>
 <template id="info_fields_news" inherit_id="sale.report_saleorder_document">
      <xpath expr="//div[@id='informations']" position="replace">
         <div id="more_info" class="row mt32 mb32"> 
        
           
                <div t-if="doc.proyecto" class="col-auto mw-100 mb-2">
                    <strong>Proyecto:</strong>
                        
                            <p class="m-0" t-field="doc.proyecto"/>
                        
                </div>
                <div t-if="doc.partner_id" class="col-auto mw-10o mb-2">
                    <strong>Cliente:</strong>
                       
                            <p class="m-0" t-field="doc.partner_id"/>
                        
                </div>
                <div t-if="doc.user_id" class="col-auto mw-10o mb-2">
                    <strong>Contacto:</strong>
                        
                            <p class="m-0" t-field="doc.user_id"/>
                        
                </div>
                <div  class="col-auto mw-10o mb-2">
                    <strong>Telefono E-Mail:</strong>
                        
                            <p class="m-0" t-field="doc.user_id.login"/> <p class="m-0" t-field="doc.user_id.phone"/>
                         
                </div>
                 <div t-if="doc.invoice_status"  class="col-auto mw-10o mb-2">
                    <strong>Datos de Facturaci√≥n:</strong>
                        
                            <p class="m-0" t-field="doc.invoice_status"/>
                        
                </div>
                <div t-if="doc.invoice_status"  class="col-auto mw-10o mb-2">
                    <strong>Domicilio de instalacion:</strong>
                        <span>
                           <!--  <span class="m-0" t-field="doc.invoice_status"/> -->
                        </span> 
                </div>
        </div>
        <div id="more_info" class="row mt32 mb32">
                <div t-if="doc.cargo_envio"  class="col-auto mw-10o mb-2">
                    <strong>Cargo por envio:</strong>
                     
                            <p class="m-0" t-field="doc.cargo_envio"/>
                      
                </div>
                <div t-if="doc.tiempo_entrega"  class="col-auto mw-10o mb-2">
                    <strong>Tiempo de entrega:</strong>
                      
                            <p class="m-0" t-field="doc.tiempo_entrega"/>
                         
                </div>
                <div t-if="doc.observaciones"  class="col-auto mw-10o mb-2">
                    <strong>Observaciones:</strong>
                       
                            <p class="m-0" t-field="doc.observaciones"/>
                        
                </div>
                <div t-if="doc.user_id"  class="col-auto mw-10o mb-2">
                    <strong>Nombre de vendedor:</strong>
                     
                            <p class="m-0" t-field="doc.user_id"/>
                        
                </div>
                <div t-if="doc.validity_date"  class="col-auto mw-10o mb-2">
                    <strong>Fecha:</strong>
                      
                            <p class="m-0" t-field="doc.validity_date"/>
                        
                </div>

            
            
        </div>
      </xpath>
  </template>
   <template id="fields_news" inherit_id="sale.report_saleorder_document">
      <xpath expr="//div[@id='total']/div[1]" position="inside">
         <div  class="row justify-content-end">
                       
                        <span>___________________</span><br/>
                        <span>Firma Cliente</span><br/>
                        <br/>
                      
                        <br/>
                         <span>___________________</span><br/>
                        <span>Firma monopark</span><br/>

                    </div>
      </xpath>
    </template> 

    <template id="fields_news_inferior" inherit_id="sale.report_saleorder_document">
      <xpath expr="//div[hasclass('page')]/div[5]" position="after">
        <div style=" margin-top:50px">
            <h3> Condiciones de venta </h3>
                <ul class="list-inline mb4">
                    <li t-if="doc.pago_importacion" class="list-inline-item">Pago importacion: <span t-field="doc.pago_importacion"/></li>
                </ul>
                <ul class="list-inline mb4">
                    <li t-if="doc.tiempo_entrega" class="list-inline-item">Tiempo de entrega: <span t-field="doc.tiempo_entrega"/></li>
                </ul>
                 <ul class="list-inline mb4">
                    <li t-if="doc.nota_venta" class="list-inline-item">Nota: <span t-field="doc.nota_venta"/></li>
                </ul>
                

            </div>
      </xpath>
    </template>
</data>
</odoo>